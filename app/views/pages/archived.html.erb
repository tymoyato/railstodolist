<div class="card-deck">
  <% @lists.each do |list| %>
    <div class="card">
      <div class="card text-white bg-primary">
        <div class="card-header"><%= list.name %></div>
        <div class="card-body">
          <h5 class="card-title"><%= list.description %></h5>
          <% list.items.each do |item| %>
            <% if item.upfinish? %>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <h4 style="color: black"><%= item.name %></h4>
                  <h4 style="color: black"><%= item.updated_at %></h4>
                </li>
              </ul>
              <br />
            <% end %>
          <% end %>
          <br />
        </div>
      </div>
    </div>
  <% end %>
</div>
