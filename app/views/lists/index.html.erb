<% if !@lists.nil? %>
  <div class="card-deck">
    <% @lists.each do |list| %>
      <div class="card">
        <div class="card text-white bg-primary">
          <div class="card-header"><%= list.name %></div>
          <div class="card-body">
            <h5 class="card-title"><%= list.description %></h5>
            <% list.items.each do |item| %>
              <% if item.draft? %>
                <ul class="list-group">
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <h4 style="color: black">
                    </style><%= item.name %></h4>
                    <div class="button">
                      <%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
                    </div>
                  </li>
                </ul>
                <br />
              <% end %>
            <% end %>
            <div class="button">
              <%= link_to 'View', list_path(list), class:'btn btn-success my-2 my-sm-0' %>
            </div>
            <br />
            <div class="button">
              <%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger my-2 my-sm-0' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

